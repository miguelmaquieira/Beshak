<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:s='urn:import:com.selene.arch.exe.gwt.client.ui.widget.image'>

	<ui:with field='CONTROLLER_TEXTS' 	type='com.selene.arch.exe.gwt.client.view.controller.AEGWTI18NControllerTexts' />

	<g:HTMLPanel>
		<div class="aegwt-landingContainer">
			<div class="aegwt-landingHeader">
				<img src="images/nologo.png" alt="logo" />
				<div class="aegwt-landingHeaderRightLinks">
					<g:HorizontalPanel>
						<g:Anchor ui:field="createAccount" text="{CONTROLLER_TEXTS.action_create_account_text}" styleName="aegwt-rightLink" />
						<g:Label ui:field="pipe" text="|"></g:Label>
						<g:Anchor ui:field="showLogin" text="{CONTROLLER_TEXTS.action_login_text}" styleName="aegwt-rightLink" />
					</g:HorizontalPanel>
				</div><!--agwt-landingHeaderRightLinks -->
			</div><!--aegwt-landingHeader -->

			<div class="aegwt-landingHomeBanner">
				<g:HorizontalPanel width="100%" height="100%" horizontalAlignment="center" verticalAlignment="middle">
					<s:AEGWTImageContainer ui:field="progressContainer" imageUrl="images/progressBarLoader.gif" imageSize="25" containerSize="50" />
					<g:HorizontalPanel width="200px" height="300px" styleName="aegwt-landingContentPanel"></g:HorizontalPanel>
				</g:HorizontalPanel>
			</div><!--aegwt-landingHomeBanner -->
		</div><!--aegwt-landingContainer -->

	</g:HTMLPanel>
</ui:UiBinder>
